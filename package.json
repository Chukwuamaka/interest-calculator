{
  "name": "interest-calculator",
  "version": "1.0.0",
  "description": "An interest calculator that performs both simple and compound interest calculations",
  "main": "server.ts",
  "nodemonConfig": {
    "ext": "js,ts,json",
    "execMap": {
      "ts": "ts-node"
    },
    "exec": "npm start",
    "ignore": ["public/src"]
  },
  "scripts": {
    "prestart": "tsc --project ./lib",
    "start": "ts-node server.ts",
    "watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Chukwuamaka/interest-calculator.git"
  },
  "keywords": [
    "interest calculator",
    "calculator",
    "simple interest",
    "compound interest",
    "interest"
  ],
  "author": "Chukwuamaka Osuji",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Chukwuamaka/interest-calculator/issues"
  },
  "homepage": "https://github.com/Chukwuamaka/interest-calculator#readme",
  "dependencies": {
    "express": "^4.17.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.1",
    "nodemon": "^2.0.4"
  }
}
